<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dip">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    		android:id="@+id/linear_layout"
            android:layout_width="fill_parent"
            android:layout_marginTop="15dip"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/pending_file_list"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="Blabla"
                android:textColor="#0000ff"
                android:textSize="18dp" />

</LinearLayout>
        
        <TableLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/table_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear_layout"
            android:layout_marginTop="15dip"            
            android:stretchColumns="*" >

            <TableRow >

                <Button
                    android:id="@+id/button_tag_one"
                    android:background="@drawable/buttonshape"
                    android:layout_width="wrap_content"
                    android:layout_height="50dip"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dip"                    
                    android:layout_marginRight="5dip"
                    android:text="Tag1"
                    android:textSize="13dp" />

                <Button
                    android:id="@+id/button_tag_two"
                    android:background="@drawable/buttonshape"                    
                    android:layout_width="wrap_content"
                    android:layout_height="50dip"
                    android:layout_weight="1"
                    android:layout_marginRight="5dip"                    
                    android:text="Tag2"
                    android:textSize="13dp" />

                <Button
                    android:id="@+id/button_tag_three"
                    android:background="@drawable/buttonshape"                    
                    android:layout_width="wrap_content"
                    android:layout_height="50dip"
                    android:layout_weight="1"
                    android:layout_marginRight="5dip"
                    android:text="Tag3"
                    android:textSize="13dp" />
            </TableRow>

            <TableRow android:paddingTop="10dip">

                <Button
                    android:id="@+id/button_tag_five"
                    android:background="@drawable/buttonshape"                    
                    android:layout_width="wrap_content"
                    android:layout_height="50dip"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dip"                    
                    android:layout_marginRight="5dip" 
					android:paddingTop="10dip"                                       
                    android:text="Tag5"
                    android:textSize="13dp" />

                <Button
                    android:id="@+id/button_tag_four"
                    android:background="@drawable/buttonshape"                    
                    android:layout_width="wrap_content"
                    android:layout_height="50dip"
                    android:layout_weight="1"
                    android:layout_marginRight="5dip"                      
					android:paddingTop="10dip"                    
                    android:text="Tag4"
                    android:textSize="13dp" />

                <Button
                    android:id="@+id/button_tag_six"
                    android:background="@drawable/buttonshape"                    
                    android:layout_width="wrap_content"
                    android:layout_height="50dip"
                    android:layout_weight="1"
                    android:layout_marginRight="5dip"
					android:paddingTop="10dip"                                          
                    android:text="Tag6"
                    android:textSize="13dp" />
            </TableRow>
        </TableLayout>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="10dip"
    android:layout_alignParentLeft="true" >

    <Button
        android:id="@+id/button_tag_done"
        android:background="@drawable/buttonshape"        
        android:layout_width="wrap_content"
        android:layout_height="50dip"
        android:paddingRight="10dip"
        android:paddingLeft="10dip"
        android:paddingTop="10dip"
        android:layout_marginBottom="10dip"  
        android:paddingBottom="10dip"
        android:layout_marginRight="10dip"      
        android:layout_centerHorizontal="true"
        android:text="@string/tag_me" />
</RelativeLayout>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    		android:id="@+id/linear_layout2"
			android:layout_below="@id/table_layout"
			android:paddingTop="10dip"
			android:layout_above="@id/relative_layout"    		
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

     
        <AutoCompleteTextView 
    		android:text="" 
    		android:layout_height="50dip" 
    		android:layout_width="fill_parent" 
    		android:id="@+id/tag_field"
            android:background="@drawable/buttonshape"
    		android:lines="1">
    </AutoCompleteTextView>
</LinearLayout>


            
</RelativeLayout>