<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent" android:layout_height="fill_parent">

        <ImageView android:layout_alignParentLeft="true" android:layout_height="50dp" android:layout_width="wrap_content"
                android:paddingRight="5dp" android:paddingLeft="3dp" android:id="@+id/configuration_item_image">
        </ImageView>
        <TextView android:text="@+id/configuration_item" android:layout_width="wrap_content"
                android:layout_toRightOf="@+id/configuration_item_image"
                android:layout_alignTop="@+id/configuration_item_image" android:layout_alignBottom="@+id/configuration_item_image"
                android:gravity="center_vertical" android:layout_height="50dp"
                android:textSize="20dp" android:id="@+id/configuration_item">
        </TextView> 
</RelativeLayout>
