<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:stretchColumns="1"

	android:layout_width="fill_parent" android:layout_height="fill_parent">

	<TableRow>

		<TextView android:id="@+id/file_name_label" 
				  android:layout_width="wrap_content"
				  android:textColor="#FFF" 
				  android:text="@string/file_name"/>

		<TextView android:id="@+id/file_name_value" 
				  android:paddingLeft="30dp"
				  android:text="Tag1"
				  android:textColor="#FFF" />
	</TableRow>
	
	<TableRow>
		<TextView android:id="@+id/file_folder_label" 
			      android:textColor="#FFF" 
			      android:text="@string/directory_name_string" />

		<TextView android:id="@+id/file_folder_value" 
				  android:paddingLeft="30dp"
				  android:text="/mnt/folder"
			      android:textColor="#FFF" />
	</TableRow>
	<TableRow>
		<TextView android:id="@+id/file_size_label"
				  android:textColor="#FFF" 
				  android:text="@string/file_size"/>
				  
		<TextView android:text="1 KB" 
				  android:paddingLeft="30dp"		
				  android:id="@+id/file_size_value"
				  android:textColor="#FFF" />
	</TableRow>
	<TableRow>
		<TextView android:id="@+id/file_date_label"
				  android:textColor="#FFF" 
				  android:text="@string/file_date"/>
				  
		<TextView android:text="01.01.2010 13:13:01" 
				  android:paddingLeft="30dp"		
				  android:id="@+id/file_date_value"
				  android:textColor="#FFF" />
	</TableRow>	
	
	<TableRow>
		<TextView android:id="@+id/file_type_label" 

			      android:textColor="#FFF"
			      android:text="@string/file_type"/>

		<TextView android:id="@+id/file_type_value"
				  android:paddingLeft="30dp" 
				  android:text="image/jpeg"
			      android:textColor="#FFF" />
	</TableRow>
	<TableRow>
		<TextView android:id="@+id/file_hashsum_label" 
				  android:textColor="#FFF" 
				  android:text="@string/hashsum"/>
				  
		<TextView android:text="a1000" 
				  android:id="@+id/file_hashsum_value"
				  android:textColor="#FFF"
                  android:paddingLeft="30dp"></TextView>
	</TableRow>

</TableLayout>
